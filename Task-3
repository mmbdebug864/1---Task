2. ALTER TABLE Mark
ALTER COLUMN mark INTEGER NOT NULL CHECK (mark >= 1 AND mark <= 10);

ALTER TABLE Mark
ALTER COLUMN student_id INTEGER NOT NULL;

ALTER TABLE Mark
ALTER COLUMN subject_id INTEGER NOT NULL;

3. ALTER TABLE Subject
ALTER COLUMN grade INTEGER NOT NULL CHECK (grade >= 1 AND grade <= 5);

4. ALTER TABLE PaymentType
ADD CONSTRAINT UNIQUE_PaymentType_name UNIQUE (name);


5. ALTER TABLE Payment
ALTER COLUMN type_id INT NOT NULL;

ALTER TABLE Payment
